@model ModelsandForms.Models.Person

@{
    ViewData["Title"] = "AddPerson";
}
<h2>AddPerson</h2>

<h4>PersonData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPerson">
            <div asp-validation-summary="ModelForm" class="text-danger"></div>

            <div class="form-section">
                <label asp-for="firstName" class="control-label">FirstName</label>
                <br />
                <input asp-for="firstName" class="formcontrol" maxlength="22" id="input"/>
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>

            <div class="form-section">
                <label asp-for="lastName" class="control-label">FirstName</label>
                <br />
                <input asp-for="lastName" class="formcontrol" maxlength="22" id="input" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>

            <div class="form-section">
                <label asp-for="birthDay" class="control-label">FirstName</label>
                <br />
                <input asp-for="birthDay" class="formcontrol" maxlength="22" id="input" />
                <span asp-validation-for="birthDay" class="text-danger"></span>
            </div>

            <div class="form-section">
                <input type="submit" value="Submit" class="btn btn-default" id="simplebutton" />
                <a asp-action="Index" id="cancel">Cancel</a>

            </div>
        </form>
    </div>
</div>

