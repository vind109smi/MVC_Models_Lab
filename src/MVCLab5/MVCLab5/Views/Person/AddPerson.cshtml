@model MVCLab5.Models.Person

@{
    ViewData["Title"] = "AddPerson";
}


<h2>AddPerson</h2>

<h4>PersonData</h4>
<hr />

<div class="row">
    <div class="col-md-10">
        <form asp-action="AddPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-section">
                <label asp-for="firstName" class="control-label">First Name</label>
                <br />
                <input asp-for="firstName" class="formcontrol" id="input"/>
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>

            <div class="form-section">
                <label asp-for="lastName" class="control-label">Last Name</label>
                <br />
                <input asp-for="lastName" class="formcontrol" id="input" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>

            <div class="form-section">
                <label asp-for="birthDay" class="control-label">Birthday</label>
                <br />
                <input asp-for="birthDay" class="formcontrol"  id="input" />
                <span asp-validation-for="birthDay" class="text-danger"></span>
            </div>

            <div class="lastsection">
                <input type="submit" value="Submit" class="submitbutton" />
                <a asp-action="Index" class="cancel" id="cancel">Cancel</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

